{
  "compilerOptions": {
    "target": "ES2023",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    // Ensure this is set to "react"
    "jsx": "react"
  },
  "include": [
    "api/**/*"
    // "client/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
  