{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./",
      "removeComments": true,
      "moduleResolution": "node", 
      "resolveJsonModule": true 
    },
    "include": [
      "api/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  